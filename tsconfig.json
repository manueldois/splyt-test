{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonJS",
    "target": "es2020",
    "allowJs": true,
    "lib": [
      "es2020",
      "DOM"
    ],
    "sourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}